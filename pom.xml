    <build>
        <plugins>
            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.4</version>
                <dependencies>
                    <dependency>
                        <groupId>com.google.javascript</groupId>
                        <artifactId>closure-compiler</artifactId>
                        <version>v20140814</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                        <id>minify-default</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <closureLanguage>ECMASCRIPT5_STRICT</closureLanguage>
                            <charset>UTF-8</charset>
                            <!--<skipMerge>true</skipMerge>-->
                            <nosuffix>true</nosuffix>
                            <!-- CSS FILES MINIFICATION -->         
                            <cssSourceDir>app</cssSourceDir>
                            <cssTargetDir>app/styles</cssTargetDir>
                            <cssSourceIncludes>
                                <cssSourceInclude>styles/*.css</cssSourceInclude>
                                <cssSourceInclude>bower_components/toastr/toastr.min.css</cssSourceInclude>
                            </cssSourceIncludes>
                            <cssFinalFile>styles.min.css</cssFinalFile>
                            <!-- END OF CSS MINIFICATION -->
                            <!-- JS FILES MINIFICATION -->  
                            <jsSourceDir>app/scripts</jsSourceDir>
                            <jsTargetDir>app/scripts/min</jsTargetDir>
                            <jsSourceIncludes>
                                <jsSourceInclude>*.js</jsSourceInclude>
                            </jsSourceIncludes>
                            <jsSourceExcludes>
                                <jsSourceExclude>app.js</jsSourceExclude>
                                <jsSourceExclude>filters.js</jsSourceExclude>
                                <jsSourceExclude>oauthProviderIds.js</jsSourceExclude>
                            </jsSourceExcludes>
                            <jsFinalFile>scripts.min.js</jsFinalFile>
                            <!-- END OF JS MINIFICATION -->
                            <jsEngine>CLOSURE</jsEngine>
                            <closureCreateSourceMap>true</closureCreateSourceMap>
                        </configuration>
                    </execution>
                    <execution>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                        <id>minifyJS_modules_controllers_services</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <closureLanguage>ECMASCRIPT5_STRICT</closureLanguage>
                            <nosuffix>true</nosuffix>
                            <jsSourceDir>app/scripts</jsSourceDir>
                            <jsTargetDir>app/scripts/min/</jsTargetDir>
                            <jsSourceIncludes>
                                <jsSourceInclude>modules/facebook.js</jsSourceInclude>
                                <jsSourceInclude>modules/google.js</jsSourceInclude>
                                <jsSourceInclude>modules/linkedin.js</jsSourceInclude>
                                <jsSourceInclude>modules/twitter.js</jsSourceInclude>
                                <jsSourceInclude>modules/yahoo.js</jsSourceInclude>
                                <jsSourceInclude>controllers/*.js</jsSourceInclude>
                                <jsSourceInclude>services/*.js</jsSourceInclude>
                            </jsSourceIncludes>
                            <jsFinalFile>modules-controllers-services.min.js</jsFinalFile>
                            <jsEngine>CLOSURE</jsEngine>
                            <closureCreateSourceMap>true</closureCreateSourceMap>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>  
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>com.github.jtreport.core.SurefireReportTestListner</value>
                        </property>
                    </properties>
                    <systemProperties>
                        <property>
                            <name>jtreportConfig</name>
                            <value>jtreport.properties</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>   
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <reportPlugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>findbugs-maven-plugin</artifactId>
                        </plugin>
                    </reportPlugins>
                </configuration>
            </plugin>
